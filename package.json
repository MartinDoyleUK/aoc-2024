{
  "name": "advent-of-code-2023",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.1.1",
  "main": "dist/index.js",
  "scripts": {
    "----------------LIFECYCLE----------------": "",
    "postinstall": "husky install",
    "----------------BUILDING----------------": "",
    "build:clean": "run-s clean build",
    "build:watch:clean": "run-s clean build:watch",
    "build:watch": "run-p copy:watch compile:watch",
    "build": "run-p copy compile",
    "compile:watch": "tsc --watch",
    "compile": "tsc",
    "copy:clean": "run-s clean copy",
    "copy:watch": "copy-and-watch --watch \"src/**/*.txt\" \"dist\"",
    "copy": "copyfiles -u 1 src/**/*.txt dist/",
    "----------------CLEANING----------------": "",
    "clean": "del-cli dist/",
    "----------------TESTING----------------": "",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "----------------LINTING----------------": "",
    "lint:checktypes": "tsc --noEmit",
    "lint:eslint:fix": "eslint --fix .",
    "lint:eslint": "eslint .",
    "lint:fix": "run-p --aggregate-output --print-label lint:eslint:fix lint:checktypes",
    "lint": "run-p --continue-on-error --aggregate-output --print-label lint:eslint lint:checktypes",
    "----------------RUNNING----------------": "",
    "dev:watch": "yarn clean && run-p --print-label build:watch compile:watch copy:watch",
    "dev": "nodemon --config bin/nodemon/dev.json",
    "run": "node --experimental-specifier-resolution=node --no-warnings dist/index.js --runAll",
    "start": "run-s build:clean run"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "number-to-words": "^1.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@sindresorhus/tsconfig": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/number-to-words": "^1.2.3",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "copy-and-watch": "^0.1.6",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.54.0",
    "eslint-config-canonical": "^42.8.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
